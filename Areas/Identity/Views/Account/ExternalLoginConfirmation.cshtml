@model ExternalLoginConfirmationViewModel
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-body p-0">
                    <div class="bg-primary bg-gradient p-4 text-white text-center">
                        <i class="fas fa-user-plus fa-4x mb-3 animate__animated animate__bounceIn"></i>
                        <h2 class="fw-bold mb-0">@ViewData["Title"]</h2>
                    </div>
                    <div class="p-5">
                        <h3 class="text-center mb-4">Thực hiện liên kết với tài khoản @ViewData["ProviderDisplayName"]</h3>

                        <form asp-controller="Account" asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                            <div class="alert alert-info mb-4">
                                <i class="fas fa-info-circle me-2"></i>
                                Bạn đã xác thực liên kết với <strong>@ViewData["ProviderDisplayName"]</strong>.
                                Hãy nhập địa chỉ email để liên kết hoặc tạo tài khoản.
                            </div>

                            <div class="form-floating mb-4">
                                <input asp-for="Email" class="form-control form-control-lg" placeholder="name@example.com" />
                                <label asp-for="Email" class="form-label"></label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm hover-effect">
                                    <i class="fas fa-user-plus me-2"></i>Đăng ký
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-effect {
        transition: all 0.3s ease;
    }
    .hover-effect:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1) !important;
    }
    .animate__animated {
        animation-duration: 1s;
    }
    .bg-primary {
        background: linear-gradient(45deg, #0d6efd, #0a58ca) !important;
    }
    .form-floating > .form-control {
        height: calc(3.5rem + 2px);
        line-height: 1.25;
    }
    .form-floating > label {
        padding: 1rem 0.75rem;
    }
</style>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
